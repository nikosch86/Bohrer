FROM golang:1.23-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

# Copy sample server source
COPY test/sample-http-server.go ./sample-http-server.go
RUN CGO_ENABLED=0 GOOS=linux go build -o sample-server sample-http-server.go

FROM alpine:latest
RUN apk --no-cache add ca-certificates curl
WORKDIR /root/

COPY --from=builder /app/sample-server .

EXPOSE 3000

CMD ["./sample-server"]